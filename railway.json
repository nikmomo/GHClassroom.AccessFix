{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "envVars": {
    "PORT": {
      "default": "3000"
    },
    "NODE_ENV": {
      "default": "production"
    },
    "LOG_LEVEL": {
      "default": "info"
    },
    "LOG_FORMAT": {
      "default": "json"
    },
    "DRY_RUN": {
      "default": "false"
    },
    "AUTO_ADD_COLLABORATOR": {
      "default": "true"
    },
    "DEFAULT_PERMISSION": {
      "default": "push"
    }
  }
}