# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_ORG=your_github_classroom_organization
WEBHOOK_SECRET=your_webhook_secret_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty

# Features
DRY_RUN=false
AUTO_ADD_COLLABORATOR=true
DEFAULT_PERMISSION=push

# Rate Limiting
RATE_LIMIT_MAX_RETRIES=3
RATE_LIMIT_RETRY_DELAY=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
ALLOWED_IPS=
CORS_ORIGIN=*